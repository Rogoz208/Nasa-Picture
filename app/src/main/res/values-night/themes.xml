        <item name="colorPrimary">@color/lilac_700</item>
        <item name="colorPrimaryVariant">@color/black_coral_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_coral_200</item>
        <item name="colorSecondaryVariant">@color/raising_black_700</item>
